<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/theme_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/em_common_title_bar_height"
        app:titleBarTitle="@string/em_group_member_type_title"
        app:titleBarRightTitle="@string/add_member"
        app:titleBarRightVisible="true"
        app:titleBarLeftImage="@drawable/icon_back"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_view_height"
        android:paddingTop="@dimen/search_view_padding_v"
        android:paddingBottom="@dimen/search_view_padding_v"
        android:paddingStart="@dimen/search_view_padding_h"
        android:paddingEnd="@dimen/search_view_padding_h"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/ease_search_bg_shape"
            android:paddingStart="@dimen/padding_search_bar"
            android:paddingEnd="@dimen/padding_search_bar"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/em_margin_20"
                android:layout_height="@dimen/em_margin_20"
                android:src="@drawable/ease_search_icon"
                android:layout_gravity="center_vertical"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/search_et_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/name_title_color"
                android:textSize="@dimen/em_size_normal"
                android:maxLines="1"
                android:background="@null"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/search_empty"
                android:layout_width="@dimen/em_margin_20"
                android:layout_height="@dimen/em_margin_20"
                android:src="@drawable/icon_search_close"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/search_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/em_size_normal"
                android:textColor="@color/search_close_color"
                android:text="@string/cancel"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/search_view_padding_v"
                android:layout_marginEnd="@dimen/search_view_padding_h"
                />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/search_tv_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ease_search_bg_shape"
            />

        <LinearLayout
            android:id="@+id/search_icon_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/em_margin_20"
                android:layout_height="@dimen/em_margin_20"
                android:src="@drawable/ease_search_icon"
                android:layout_gravity="center_vertical"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:textColor="@color/search_hint_color"
                android:textSize="@dimen/em_size_normal"
                />

        </LinearLayout>

    </RelativeLayout>

    <com.hyphenate.easeui.widget.EaseRecyclerView
        android:id="@+id/rv_member_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>